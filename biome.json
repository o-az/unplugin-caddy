{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": [
      "**",
      "!dist",
      "!node_modules"
    ],
    "ignoreUnknown": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "useSortedKeys": "off",
        "organizeImports": "off",
        "useSortedAttributes": "off"
      }
    }
  },
  "root": true,
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "bracketSameLine": true,
    "formatWithErrors": true,
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "includes": [
      "src"
    ],
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off",
        "noStaticOnlyClass": "off",
        "noUselessConstructor": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "off",
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off"
      }
    }
  },
  "json": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "lineWidth": 1,
      "enabled": true,
      "indentWidth": 2,
      "bracketSpacing": true,
      "indentStyle": "space",
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "bracketSpacing": true,
      "indentStyle": "space",
      "quoteStyle": "single",
      "bracketSameLine": true,
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "single",
      "attributePosition": "auto",
      "quoteProperties": "preserve",
      "arrowParentheses": "asNeeded"
    }
  },
  "html": {
    "parser": {
      "interpolation": true
    },
    "formatter": {
      "enabled": true,
      "lineWidth": 100,
      "indentWidth": 2,
      "indentStyle": "space",
      "bracketSameLine": true,
      "attributePosition": "auto",
      "indentScriptAndStyle": true,
      "selfCloseVoidElements": "never"
    }
  },
  "css": {
    "parser": {
      "allowWrongLineComments": true
    },
    "assist": {
      "enabled": true
    },
    "globals": [
      "@apply"
    ],
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": [
        ".json",
        ".jsonc"
      ],
      "formatter": {
        "lineWidth": 1
      },
      "json": {
        "formatter": {
          "lineWidth": 1
        },
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": [
        ".vue",
        ".astro",
        ".svelte"
      ],
      "formatter": {
        "enabled": true
      },
      "javascript": {
        "formatter": {
          "enabled": true
        }
      },
      "linter": {
        "enabled": true,
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedImports": "off",
            "useHookAtTopLevel": "off",
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
