{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**",
      "!**/_/**",
      "!**/node_modules/**"
    ],
    "ignoreUnknown": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "root": true,
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off",
        "noStaticOnlyClass": "off",
        "noUselessConstructor": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "useNamingConvention": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "off",
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off"
      }
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "lineWidth": 1
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "bracketSpacing": true,
      "indentStyle": "space",
      "quoteStyle": "single",
      "bracketSameLine": true,
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "single",
      "attributePosition": "auto",
      "quoteProperties": "preserve",
      "arrowParentheses": "asNeeded"
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "lineWidth": 100,
      "indentWidth": 2,
      "indentStyle": "space",
      "bracketSameLine": true,
      "attributePosition": "auto",
      "indentScriptAndStyle": true,
      "selfCloseVoidElements": "never"
    }
  },
  "css": {
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": [
        "**/*.json",
        "**/*.jsonc"
      ],
      "formatter": {
        "lineWidth": 1
      },
      "json": {
        "formatter": {
          "lineWidth": 1
        },
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    }
  ]
}
